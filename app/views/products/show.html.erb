<a href="#" class="js-next" data-id="<%= @product.id %>">Next Product</a>

<h1 class="productName"><%= @product.name %></h1>
<p class="productBody"><%= @product.description %></p>
<p class="productPrice"><%= @product.price %></p>
<p class="productInventory"><%= @product.inventory %></p>

<script>
function One() {
  console.log("Called")
}
$(function () {
  $(".js-next").on("click", function(e) {
    e.preventDefault();
    var nextID = parseInt($(".js-next").attr("data-id")) + 1;
    console.log(nextID);
    $.getJSON("/product/" + nextID + "/data", function(data) {
      $(".productName").text(data["name"]);
      $(".productBody").text(data["description"]);
      $(".productPrice").text(data["price"]);
      $(".productInventory").text(data["inventory"]);
      // re-set the id to current on the link
      $(".js-next").attr("data-id", data["id"])
    })
  })
})
</script>