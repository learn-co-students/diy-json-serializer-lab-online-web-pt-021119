<h1 class="name"><%= @product.name %></h1>
<p class="price"><%= @product.price %></p>
<p class="inventory"><%= @product.inventory %></p>
<p class="description"><%= @product.description %></p>
<a href="#" class="js-next" data-id="<%=@product.id%>">Next Product</a>


<script type="text/javascript">
  $(".js-next").on("click", function(e) {
    e.preventDefault();
    var nextId = parseInt($(".js-next").attr("data-id")) + 1;
    $.getJSON('/products/'+ nextId +'/data', function(product_data) {
      $(".name").text(product_data.name);
      $(".price").text(product_data.price);
      $(".inventory").text(product_data.inventory);
      $(".description").text(product_data.description);
      $(".js-next").attr("data-id", product_data.id);
    });
  });
</script>
